/**
 * Implements hook_preprocess_template().
 */
function mars_product_preprocess_where_to_buy_block(&$variables) {
  $wtb_config = \Drupal::config('mars_product.wtb.settings');
  $vendor = $wtb_config->get('commerce_vendor') ?? '';
  $upcs = [];
  $mikmak_sku_key = \Drupal::request()->query->get('mikmak-sku');
  if (!empty($vendor) && $vendor === PdpHeroBlock::VENDOR_MIK_MAK) {
    $product_variant_fields = \Drupal::entityTypeManager()->getStorage('node')->loadByProperties(['type' => 'product_variant']);
    foreach ($product_variant_fields as $sku) {
      if ($sku->field_product_sku->value && !empty($sku->field_product_sku->value)) {
        if (!empty($mikmak_sku_key) && $mikmak_sku_key && $mikmak_sku_key != $sku->field_product_sku->value) {
          $upcs[$sku->field_product_sku->value] = $sku->field_product_sku->value;
        }
        elseif (empty($mikmak_sku_key) && !$mikmak_sku_key) {
          $upcs[$sku->field_product_sku->value] = $sku->field_product_sku->value;
        }
      }
    }
    if (!empty($mikmak_sku_key) && $mikmak_sku_key && $upcs) {
      array_unshift($upcs, $mikmak_sku_key);
      $upcList = implode(',', $upcs);
      $variables['data_mikmak_upc'] = $upcList;
    }
    elseif (!empty($mikmak_sku_key) && $mikmak_sku_key && !$upcs && empty($upcs)) {
      $variables['data_mikmak_upc'] = $mikmak_sku_key;
    }
    elseif (empty($mikmak_sku_key) && !$mikmak_sku_key && !$upcs && empty($upcs)) {
      $variables['data_mikmak_upc'] = "";
    }
    elseif (empty($mikmak_sku_key) && !$mikmak_sku_key && $upcs && !empty($upcs)) {
      $variables['data_mikmak_upc'] = "";
    }
  }
}
