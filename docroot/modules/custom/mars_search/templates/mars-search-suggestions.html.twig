{#
/**
 * @file
 * Default theme implementation to display mars search suggestions.
 *
 * Available variables:
 * - suggestions: Array with suggestions.
 * - show_all: Link to main search page.
 * - empty_text: Empty text.
 * - empty_text_description: Empty text descripiton.
 *
 * @ingroup themeable
 */
#}

{% if suggestions %}
  {% if cards_view %}
    <div class="search-cards-container" data-theme="twix">
      <div class="search-cards">
        {% for suggestion in suggestions %}
          {{ suggestion }}
        {% endfor %}
        <div class="search-cards-all-results">
          {{ show_all }}
        </div>
      </div>
    </div>
  {% else %}
    <ul class="suggestions-links">
      {% for suggestion in suggestions %}
        <li>{{ suggestion|raw }}</li>
      {% endfor %}
    </ul>
    <div class="show-all">
      {{ show_all }}
    </div>
  {% endif %}
{% else %}
  <div class="no-results">
    <div class="empty-text">{{ empty_text }}</div>
    <div class="empty-text-description">{{ empty_text_description }}</div>
  </div>
{% endif %}
