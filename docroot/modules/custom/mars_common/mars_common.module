/**
 * Implements hook_menu_insert().
 */
function mars_common_menu_insert(Menu $menu) {
  if (in_array($menu->id(), ['main', 'error-page-menu'])) {
    foreach (['Home', 'Products', 'About'] as $weight => $title) {
      $menu_link = MenuLinkContent::create([
        'title' => $title,
        'link' => ['uri' => 'internal:/'],
        'menu_name' => $menu->id(),
        'expanded' => TRUE,
        'weight' => $weight - 3,
      ]);
      $menu_link->save();
    }
  }
}

