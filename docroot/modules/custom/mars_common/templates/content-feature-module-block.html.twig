{#
/**
 * @file
 * Template for the content feature module component.
 *
 * Available variables:
 * 'eyebrow' => NULL,
 * 'label' => NULL,
 * 'background' => NULL,
 * 'description' => NULL,
 * 'explore_cta' => NULL,
 * 'explore_cta_link' => NULL,
 */
#}

{% set background = file_url(background.image.entity.fileuri) %}

{% include "@molecules/content-feature/content-feature.twig" with {
  theme_styles: 'drupal',
  eyebrow_text: eyebrow,
  heading: label,
  paragraph_content: description,
  background_image: background,
  default_link_content: explore_cta,
  default_link_border_radius: border_radius,
  default_link_attributes: {
    href: explore_cta_link
  },
  heading_level: '1',
  paragraph_modifiers: 'large',
  graphic_divider: graphic_divider
} %}
