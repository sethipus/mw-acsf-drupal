/**
 * Implements hook_entity_bundle_field_info().
 */
function mars_recipes_entity_bundle_field_info(EntityTypeInterface $entity_type, $bundle, array $base_field_definitions) {
  $fields = [];

  if ($entity_type->id() != 'node' || $bundle != 'recipe' || empty($base_field_definitions['title'])) {
    return $fields;
  }

  $field = BaseFieldOverride::createFromBaseFieldDefinition($base_field_definitions['title'], $bundle);
  $field->setSetting('max_length', 60);
  $fields['title'] = $field;

  return $fields;
}

/**
 * Implements hook_field_widget_form_alter().
 */
function mars_recipes_field_widget_form_alter(
  &$element,
  FormStateInterface $form_state,
  $context
) {
  $field_name = $context['items']->getName();

  $form_id = $form_state->getFormObject()->getFormId();
  $form_array = [
    'node_recipe_edit_form',
    'node_recipe_form',
  ];
  if (in_array($form_id, $form_array) && $field_name == 'field_recipe_cooking_time') {
    $element['value']['#step'] = 5;
  }
}

/**
 * Implements hook_preprocess_HOOK().
 */
function mars_recipes_preprocess_node__recipe__card(array &$variables) {
  $color_key = \Drupal::config(MarsCardColorSettingsForm::SETTINGS)->get('select_background_color_recipe');

  $background_color = '';
  if ($color_key != 'default' &&
    !empty($color_key) &&
    array_key_exists($color_key, MarsCardColorSettingsForm::$colorVariables)
  ) {
    $background_color = $color_key;
  }
  $variables['#cache']['tags'][] = 'config:' . MarsCardColorSettingsForm::SETTINGS;
  $variables['select_background_color'] = $background_color;
}
