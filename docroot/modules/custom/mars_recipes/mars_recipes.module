/**
 * Implements hook_entity_bundle_field_info().
 */
function mars_recipes_entity_bundle_field_info(EntityTypeInterface $entity_type, $bundle, array $base_field_definitions) {
  $fields = [];

  if ($entity_type->id() != 'node' || $bundle != 'recipe' || empty($base_field_definitions['title'])) {
    return $fields;
  }

  $field = BaseFieldOverride::createFromBaseFieldDefinition($base_field_definitions['title'], $bundle);
  $field->setSetting('max_length', 60);
  $fields['title'] = $field;

  return $fields;
}

/**
 * Implements hook_field_widget_form_alter().
 */
function mars_recipes_field_widget_form_alter(
  &$element,
  FormStateInterface $form_state,
  $context
) {
  $field_name = $context['items']->getName();

  $form_id = $form_state->getFormObject()->getFormId();
  $form_array = [
    'node_recipe_edit_form',
    'node_recipe_form',
  ];
  if (in_array($form_id, $form_array) && $field_name == 'field_recipe_cooking_time') {
    $element['value']['#step'] = 5;
  }
}

/**
 * Implements hook_preprocess_HOOK().
 */
function mars_recipes_preprocess_node__recipe__card(array &$variables) {
  $color_key = \Drupal::config(MarsCardColorSettingsForm::SETTINGS)->get('select_background_color_recipe');
  card_change_color($variables, $color_key);
  card_add_badge_text($variables);
  card_add_button_label($variables, 'recipe_card_button');
  add_cache_by_label_config($variables);

  $language_helper = \Drupal::service('mars_common.language_helper');
  $config = \Drupal::config('mars_common.site_labels');

  // Add Cooking Time label.
  $cooking_time_label = $config->get('recipe_card_cooking_time');
  $variables['recipe_card_cooking_time'] = $language_helper->translate($cooking_time_label);

  // Add Ingredients label.
  $ingredients_label = $config->get('recipe_card_ingredients');
  $variables['recipe_card_ingredients'] = $language_helper->translate($ingredients_label);
}

/**
 * Implements hook_form_alter().
 */
function mars_recipes_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  if ($form_id === 'node_recipe_edit_form' || $form_id === 'node_recipe_form') {
    $form["field_recipe_description"]["widget"][0]["#format"] = 'plain_text';
    $default_value = $form["field_recipe_description"]["widget"][0]["#default_value"];
    $default_value = strip_tags(html_entity_decode($default_value));
    $form["field_recipe_description"]["widget"][0]["#default_value"] = $default_value;
  }
}
