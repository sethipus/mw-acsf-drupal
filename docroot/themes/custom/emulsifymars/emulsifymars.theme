/**
 * Implements hook_preprocess_views_view_unformatted().
 */
function emulsifymars_preprocess_views_view_unformatted(&$variables) {
  global $base_url;

  $view = $variables['view'];
  $id = $view->storage->id();
  $items = [];

  if ($id == 'related_recipes') {
    foreach ($view->result as $result) {
      $url = Url::fromRoute('entity.node.canonical', ['node' => $result->_entity->id()]);
      $url = $url->toString();

      $body_raw = $result->_entity->get('field_recipe_description')->first()->getValue();
      $description = !empty($body_raw['value']) ? $body_raw['value'] : '';
      $cta_raw = $result->_entity->get('field_recipe_cta')->getValue();
      $card_link_text = !empty($cta_raw[0]['value']) ? $cta_raw[0]['value'] : '';

      $image_value = $result->_entity->get('field_recipe_image')->first()->getValue();
      $media = Media::load($image_value['target_id']);

      $media_field = $media->get('image')->first()->getValue();
      $file = File::load($media_field['target_id']);
      if ($file) {
        $file_uri = $file->getFileUri();
      }
      $image_src = !empty($file_uri) ? file_create_url($file_uri) : '';

      $items[] = [
        'card__image__src' => $image_src,
        'card__image__alt' => $media_field['alt'],
        'card__heading' => $result->_entity->getTitle(),
        'card__link__url' => $url,
        'card__link__text' => $card_link_text,
        'card__body' => $description,
      ];
    }
  }

  $brand_border = theme_get_setting('brand_borders');
  $brand_border_fid = !empty($brand_border[0]) ? $brand_border[0] : '';
  if ($brand_border_fid) {
    $file = File::load($brand_border_fid);
  }
  $variables['brand_border'] = !empty($file) ? file_get_contents($base_url . $file->createFileUrl()) : '';

  $divider = theme_get_setting('graphic_divider');
  $divider_fid = !empty($divider[0]) ? $divider[0] : '';
  if ($divider_fid) {
    $file = File::load($divider_fid);
  }
  $variables['divider'] = !empty($file) ? file_get_contents($base_url . $file->createFileUrl()) : '';

  $variables['theme_styles'] = 'twix';
  $variables['grid_type'] = 'card';
  $variables['item_type'] = 'card';
  $variables['items'] = $items;
}
