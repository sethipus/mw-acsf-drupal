{% set article_header = 'article-header' %}

<div {{ bem(article_header) }} data-theme="{{ theme_styles }}">
  {% if image %}
    <div {{ bem('inner', ['image'], article_header) }}>
  {% else %}
    <div {{ bem('inner', ['no-image'], article_header) }} style="background-image:url('{{ shape }}');">
  {% endif %}

  <div {{ bem('inner', [], article_header) }}>
    {% if image %}
      <div {{ bem('image', [], article_header) }}>
        {% include "@atoms/images/image/responsive-image.twig" with {
          output_image_tag: true,
          image_alt: '',
          image_srcset: image.0.srcset,
          image_sizes: '(max-width: 375px) 375px,
                (max-width: 768px) 768px,
                1440px',
          image_src: image.0.src,
          responsive_image_blockname: image.0.class,
        } %}
        <div class="curve" style="background-image:url('{{ curve }}');"></div>
      </div>
    {% endif %}

    <div {{ bem('text_wrapper', [], article_header) }}>
      {% include "@atoms/text/eyebrow/eyebrow.twig" with {
        eyebrow_text: eyebrow
      } %}

      {% include "@atoms/text/headings/_heading.twig" with {
        heading_level: 2,
        heading: heading,
        heading_base_class:'heading'
      }
      %}

      {% include "@atoms/text/text/07-span.twig" with {
        span_base_class: 'published',
        span_content: date_published
      }
      %}

      <div class="share-block">
        {% include "@atoms/text/text/07-span.twig" with {
          span_base_class: 'share-text',
          span_content: share_text
        }
        %}

        {% include "@atoms/links/link/link.twig" with {
          link_content: '<i class="icon-pinterest" aria-hidden="true"></i>',
          link_url: '#',
          link_base_class: 'pinterest-link'
        }
        %}

        {% include "@atoms/links/link/link.twig" with {
          link_content: '<i class="icon-facebook" aria-hidden="true"></i>',
          link_url: '#',
          link_base_class: 'facebook-link'
        }
        %}

        {% include "@atoms/links/link/link.twig" with {
          link_content: '<i class="icon-twitter" aria-hidden="true"></i>',
          link_url: '#',
          link_base_class: 'twitter-link'
        }
        %}

        {% include "@atoms/links/link/link.twig" with {
          link_content: '<i class="icon-pinterest" aria-hidden="true"></i>',
          link_url: '#',
          link_base_class: 'download-link'
        }
        %}


      </div>
    </div>
    {% if image is empty %}
      <div class="curve" style="background-image:url('{{ curve }}');"></div>
    {% endif %}
  </div>
</div>
