{% set recipe_template__base_class = 'recipe-feature-block' %}
<section {{ bem(recipe_template__base_class) }} data-theme="{{ theme_styles }}">
  <div class="media">
    {% if video_src %}
      {% block recipe_media_video %}
        {% include "@atoms/video/ambient-video/video.twig" with {
          video__src__url: video_src,
          video__base_class: 'ambient-video',
          video__control: true,
        } %}
      {% endblock %}
    {% else %}
      {% block recipe_media_image %}
        {% include "@atoms/images/image/responsive-image.twig" with {
          output_image_tag: true,
          image_alt: image_title,
          image_srcset: image.0.srcset,
          image_sizes: '',
          image_src: image.0.src,
          responsive_image_blockname: 'recipe-media',
        } %}
      {% endblock %}
    {% endif %}
    <div class="media-info">
      <div class="brand_border">  {{ brand_border }}</div>
      <div class="eyebrow"> {{ eyebrow}} </div>
      <h1 class="title">{{ title }}</h1>
      <div class="cooking-time">
        <div class="cooking-time__icon">
          {% include "@atoms/images/image/_image.twig" with {
            image_base_class: 'recipe-details-item__icon',
            image_modifiers: ['clock'],
            image_src: icon_clock,
          } %}
        </div>
        <div class="cooking-time__info">
          <div class="cooking-time__label">{{ 'Time'|t }}</div>
          <div class="cooking-time__value">{{ cooking_time }}</div>
        </div>
      </div>
      <div class="cta-btn">
        {% set attr = {'href': cta.0.link} %}
        {% include "@atoms/links/defaultLink/defaultLink.twig" with {
          default_link_content: cta.0.text,
          default_link_border_radius: 30,
          default_link_attributes: attr
        } %}
      </div>
    </div>
  </div>
</section>
