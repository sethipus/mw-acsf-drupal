{% set entry_gate_form_base_class = 'entry-gate-form' %}

<form {{ bem(entry_gate_form_base_class, entry_gate_form_modifiers) }} data-theme={{product}}>
  <fieldset class="entry-gate-form__fieldset">
    <div class="entry-gate-form__input-container">
      <input id="day" name="day-of-birth" class="entry-gate-form__input entry-gate-form__input--rounded-left entry-gate--day" aria-label="Day of Birth" type="text" pattern="\d*" maxlength="2" required/>
      <label for="day" class="entry-gate-form__input-label">{{entry_gate_form_day_placeholder}}</label>
    </div>
    <div class="entry-gate-form__input-container">
      <input id="month" name="month-of-birth" class="entry-gate-form__input entry-gate--month" aria-label="Month of Birth" type="text" pattern="\d*" maxlength="2" required />
      <label for="month" class="entry-gate-form__input-label">{{entry_gate_form_month_placeholder}}</label>
    </div>
    <div class="entry-gate-form__input-container">
      <input id="year" name="year-of-birth" class="entry-gate-form__input entry-gate-form__input--rounded-right entry-gate--year" aria-label="Year of Birth" type="text" pattern="\d*" maxlength="4" required/>
      <label for="year" class="entry-gate-form__input-label">{{entry_gate_form_year_placeholder}}</label>
    </div>
  </fieldset>
    {% include "@atoms/buttons/twig/button.twig" with {
        button_base_class: 'entry-gate-form__submit-btn',
        button_content: entry_gate_form_submit_text
    } %}
</form>
<span class="entry-gate-form__error-message" data-theme={{product}}>{{ entry_gate_form_error_message }}</span>
