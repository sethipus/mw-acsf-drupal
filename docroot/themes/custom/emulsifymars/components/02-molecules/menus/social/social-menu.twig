  {# Set classes #}
  {% set menu_class = 'social-menu' %}
  {{ attach_library('emulsifymars/social-menu') }}


  {# List #}
  {% embed "@atoms/lists/ul.twig" with {
    ul_base_class: menu_class,
    ul_modifiers: menu_modifiers,
    ul_blockname: menu_blockname,
    social_menu_items: social_menu_items,
  } %}
    {% block list_content %}
      {% for item in social_menu_items %}
        {% embed "@atoms/lists/_list-item.twig" with {
          li_base_class: 'item',
          li_modifiers: item_modifiers,
          li_blockname: menu_class,
        } %}
          {% block list_item_content %}
            {% embed "@atoms/links/link/link.twig" with {
              link_url: item.url,
              link_base_class: 'link',
              link_modifiers: item_modifiers,
              link_blockname: menu_class,
              link_extra_classes: item.item_modifiers.class is not empty ? item.item_modifiers.class : [],
              link_attributes: item.item_modifiers is not empty ? item.item_modifiers :
                {
                  'target': '_blank',
                }
            } %}
              {% block link_content %}
                <span aria-hidden="true">
                  {{ item.icon | raw }}
                </span>
                {% include "@atoms/accessibility/SROnly/SROnly.twig" with {
                  sronly_content: item.title ~ (' (opens in new window)' | mt),
                  sronly_modifiers: ['social_link'],
                } %}
              {% endblock %}
            {% endembed %}
          {% endblock %}
        {% endembed %}
      {% endfor %}
    {% endblock %}
  {% endembed %}
