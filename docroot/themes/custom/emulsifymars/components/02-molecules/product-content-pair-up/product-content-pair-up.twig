{{ attach_library('emulsifymars/product-content-pair-up') }}
{% set product_content_pair_up_base_class = 'product-content-pair-up' %}

<section {{ bem(product_content_pair_up_base_class) }} id="product-content-pair-up" style="max-width: {{ max_width }}px;" data-theme="{{ theme_styles }}">

  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 2,
    heading: title,
    heading_base_class: product_content_pair_up_base_class ~ '__heading'
  }
  %}

  <div class="{{ product_content_pair_up_base_class }}__graphic-divider">
    {{ graphic_divider | raw }}
  </div>

  <div {{ bem('lead-card', [], product_content_pair_up_base_class) }} style="background-image: url('{{ background }}')">
    <div class="wrapper">
      {% include "@atoms/text/eyebrow/eyebrow.twig" with {
        eyebrow_text: lead_card_eyebrow
      } %}
      {% include "@atoms/text/headings/_heading.twig" with {
        heading_level: 3,
        heading: lead_card_title,
        heading_url: cta_link_url,
        heading_base_class: 'heading'
      }
      %}
      {% include "@atoms/links/defaultLink/defaultLink.twig" with {
        default_link_content: cta_link_text|default('Explore'|t),
        default_link_attributes: {
          href: cta_link_url
        }
      } %}
    </div>
  </div>

  <div {{ bem('svg-asset', [], product_content_pair_up_base_class) }}>
    {% include "@atoms/images/image/figure.twig" with {
      image_src: png_asset
    } %}
  </div>

  <div {{ bem('supportive-card', [], product_content_pair_up_base_class) }}>
    <div class="wrapper">
      {{ supporting_card_content }}
    </div>
  </div>

</section>
