{% set fullwidth_carousel__base_class = fullwidth_carousel__base_class|default('fullwidth-carousel-video') %}
{% set fullwidth_carousel__modifiers = [block_type, text_alignment] %}
{{ attach_library('emulsifymars/homepage-herobanner-text') }}

{% set additional_attr = (styles is defined and styles is not empty)
  ? {"style": styles}
  : {}
%}

<div {{ bem('wrapper', [], fullwidth_carousel__base_class) }}>
  <div {{ bem('container', ['title'], fullwidth_carousel__base_class, fullwidth_carousel__modifiers) }}>
    {% include "@atoms/text/eyebrow/eyebrow.twig" with {
      eyebrow_text: video_eyebrow,
      additional_attr: additional_attr,
    } %}

    {% include "@atoms/text/headings/_heading_next_line.twig" with {
      heading_level: 2,
      heading: video_title_label,
      heading_base_class:'heading',
      heading_url: video_title_url,
      additional_attr: additional_attr,
    } %}
    {% if block_type == 'parent_page' %}
      {% include "@atoms/separators/graphic-divider/graphic-divider.twig" with {
        graphic_divider_blockname: 'fullwidth-carousel-header',
        graphic_divider: graphic_divider
      } %}
    {% endif %}
    {% if video_cta_title %}
      {% include "@atoms/links/defaultLink/defaultLink.twig" with {
        default_link_content: video_cta_title,
        default_link_attributes: video_cta_url,
      } %}
    {% endif %}
    {% include "@atoms/text/text/01-paragraph.twig" with {
      paragraph_content: image_description,
      paragraph_base_class: 'fullwidth-carousel-description',
      additional_attr: additional_attr
    } %}
  </div>
  <div {{ bem('container', ['video'], fullwidth_carousel__base_class) }}>
    {% include "@atoms/video/fullscreen-video/video.twig" with {
      video__src__url: video__src__url,
      video__control: true,
      hide_volume: hide_volume,
      stop_autoplay: stop_autoplay
    } %}
  </div>
</div>