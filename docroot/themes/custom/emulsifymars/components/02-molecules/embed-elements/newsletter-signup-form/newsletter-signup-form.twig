{{ attach_library('emulsifymars/newsletter-signup-form') }}

<form class="newsletter-form">
  <div class="newsletter-form-lightbox">
    <!-- Heading -->
    <div class="newsletter-form-heading">Sign Up</div>
    <!-- Name & Surname columns -->
    <div class="newsletter-form-row">
      <div class="newsletter-form-columns">
        <!-- Name -->
        <div class="newsletter-form-columns__item">
          <div class="newsletter-form-item">
            <input id="first-name" type="text" class="newsletter-form-item__input" aria-labelledby="name" required>
            <label for="first-name" class="newsletter-form-item__label">First Name*</label>
          </div>
        </div>
        <!-- Last Name -->
        <div class="newsletter-form-columns__item">
          <div class="newsletter-form-item">
            <input id="last-name" type="text" class="newsletter-form-item__input" aria-labelledby="surname" required>
            <label for="last-name" class="newsletter-form-item__label">Last Name*</label>
          </div>
        </div>
      </div>
    </div>
    <!-- Email Address -->
    <div class="newsletter-form-row">
      <div class="newsletter-form-item">
        <input id="email" type="text" class="newsletter-form-item__input" aria-labelledby="email" required>
        <label for="email" class="newsletter-form-item__label">Email Address*</label>
      </div>
    </div>
    <!-- Terms and Conditions -->
    <div class="newsletter-form-row">
      <div class="newsletter-form-checkbox">
        <input class="newsletter-form-checkbox__input" name="terms-and-conditions" type="checkbox" id="terms-and-conditions" value="agreed" required>
        <label class="newsletter-form-checkbox__label" for="terms-and-conditions">
          I agree to the terms and conditions lorem ipsum dolor set lorem ipsum dolor set lorem ipsum
          <a class="newsletter-form-terms-link" href="#">Terms and conditions</a>.</label>
      </div>
    </div>
  </div>
  <button class="newsletter-form-submit" type="submit">Submit</button>
</form>
