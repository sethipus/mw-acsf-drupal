{{ attach_library('emulsifymars/keep-in-touch-form') }}

<div class="keep-in-touch-page">
  <h2 class="keep-in-touch-page__header">Keep in touch</h2>
  <img class="keep-in-touch-page__separator" src="data:image/png;base64," id="keep-in-touch-page-separator"/>
  <p class="keep-in-touch-page__info">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
