<div class="swiper-slide pdp-hero-slide">
  {% set images = {
    1440: item.image.src|resize(600, 600),
    768: item.image.src|resize(472, 472),
    375: item.image.src|resize(277, 277),
  } %}
  <div {{ bem('aspect-ratio-wrapper', ['1-1']) }}>
    {% include "@atoms/images/image/responsive-image.twig" with {
      output_image_tag: true,
      image_alt: item.image.alt,
      image_src: item.image.src|resize(600, 600),
      responsive_image_blockname: 'pdp-hero-slide',
      image_array: images,
    } %}
  </div>
</div>
