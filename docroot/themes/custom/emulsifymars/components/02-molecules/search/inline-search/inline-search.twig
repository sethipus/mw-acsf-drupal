{#
 # Available variables:
 # - inline_search__base_class - base classname of the wrapper.
 # - inline_search__modifiers - array of modifiers to add to the base classname of the wrapper.
 # - inline_search__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 # - inline_search_link__base_class - base classname of the placeholder link.
 # - inline_search_link__modifiers - array of modifiers to add to the base classname of the placeholder link.
 # - inline_search_title - search placeholder title.
 # - inline_search_url - search placeholder url.
 # - inline_search_icon - search placeholder url.
#}
{% set inline_search__base_class = inline_search__base_class|default('inline-search') %}
<div {{ bem(inline_search__base_class, inline_search__modifiers, inline_search__blockname) }}>

  {% embed "@atoms/links/link/link.twig" with {
    link_url: inline_search_url,
    link_base_class: inline_search_link__base_class|default(inline_search__base_class ~ '__link'),
    link_modifiers: inline_search_link__modifiers,
  } %}
    {% block link_content %}
        {% include "@atoms/images/icons/_icon.twig" with {
          icon_base_class: "icon",
          icon_blockname: "inline-search",
          icon_name: inline_search_icon,
          icon_decorative: true,
        } %}
        {% include "@atoms/text/text/07-span.twig" with {
          span_content: inline_search_title,
        } %}
    {% endblock %}
  {% endembed %}
</div>
