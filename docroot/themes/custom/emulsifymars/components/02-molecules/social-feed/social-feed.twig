{% set social_feed_base_class = social_feed_base_class|default('social-feed') %}

<section id="social-feed" {{ bem(social_feed_base_class) }} data-theme="twix">
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 1,
    heading_base_class: 'social-feed-heading',
    heading: 'More from Twix'
  } %}

  <div class="swiper-container">
    <div class="swiper-wrapper">
        {% for item in items %}
          <div class="swiper-slide">
            <a href="{{ item.link }}" class="swiper-slide-link" target="_blank">
              <div class="slide-header">
                <span class="createdAt">{{ item.createdAt }}</span>
              </div>
              <img src="{{ item.image.url }}" alt="{{ item.image.alt}}" />
            </a>
          </div>
        {% endfor %}
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-scrollbar"></div>
  </div>
</section>