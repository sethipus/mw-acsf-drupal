{% set homepage_hero__base_class = 'homepage-hero-standard' %}

<section {{ bem(homepage_hero__base_class) }} id="homepage-hero-standard" data-theme="{{ theme_styles }}"
  {% if background_color %}
    style="background-color: {{ background_color }};"
  {% endif %}
>
  <div {{ bem('inner', [], homepage_hero__base_class) }}>
    <div {{ bem('bubble', ['1'], homepage_hero__base_class) }}>
      {{ brand_shape | raw }}
    </div>
    <div {{ bem('bubble', ['2'], homepage_hero__base_class) }}>
      {{ brand_shape | raw }}
    </div>
    <div {{ bem('bubble', ['3'], homepage_hero__base_class) }}>
      {{ brand_shape | raw }}
    </div>
    <div {{ bem('left', [], homepage_hero__base_class) }} >
      <div class="wrapper">
        <div {{ bem('container', ['hero-text'], homepage_hero__base_class) }}>
          {% include "@atoms/text/eyebrow/eyebrow.twig" with {
            eyebrow_text: eyebrow
          } %}

          {% include "@atoms/text/headings/_heading_next_line.twig" with {
            heading_level: 2,
            heading: title_label,
            heading_override: title_label_override,
            heading_base_class:'heading',
            heading_url: title_href
          }
          %}

          {% include "@atoms/links/defaultLink/defaultLink.twig" with {
            default_link_content: cta_title,
            default_link_attributes: cta_link_attributes,
            default_link_modifiers: ['light']
          } %}
        </div>
      </div>
    </div>
    <div {{ bem('right', [], homepage_hero__base_class) }} >
      <div {{ bem('container', ['image'], homepage_hero__base_class) }}>
        {% set images = {
          1440: hero_images.desktop.src|resize(549, 458),
          768: hero_images.tablet.src|resize(310, 310),
          375: hero_images.mobile.src|resize(210, 210),
        } %}
        {% include "@atoms/images/image/responsive-image.twig" with {
          output_image_tag: true,
          image_alt: hero_images.desktop.alt,
          image_title: hero_images.desktop.title,
          image_src: hero_images.desktop.src|resize(549, 458),
          image_array: images,
          responsive_image_blockname: 'homepage-hero-image',
          height: '549px',
          width: '485px',
        } %}
      </div>
    </div>
</section>
