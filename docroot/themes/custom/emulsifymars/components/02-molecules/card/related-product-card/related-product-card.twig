{% set card__base_class = 'related-product-card' %}

<div {{ bem(card__base_class, card__modifiers, card__blockname, card__extra_classes) }} data-theme="{{ theme_styles }}">
  <div {{ bem('container', [], card__base_class) }}>
    <div {{ bem('image', [], card__base_class) }}>
      {% include "@atoms/images/image/responsive-image.twig" with {
        output_image_tag: true,
        image_alt: 'Logo',
        image_sizes: '212px',
        image_src: card__image__src,
        responsive_image_blockname: 'logo',
      } %}
    </div>

    <div {{ bem('title', [], card__base_class) }}>
      {% include "@atoms/text/text/01-paragraph.twig" with {
        paragraph_size: paragraph_size,
        paragraph_content: paragraph_content,
        paragraph_base_class: paragraph_base_class,
        paragraph_modifiers: paragraph_modifiers
      } %}
    </div>

    <div {{ bem('link_section', [], card__base_class) }}>
      <div {{ bem('button', [], card__base_class) }}>
        {% include "@atoms/links/defaultLink/defaultLink.twig" with {
          default_link_content: default_link_content,
          default_link_base_class: default_link_base_class,
          default_link_border_radius: default_link_border_radius,
          default_link_attributes: default_link_attributes,
          default_link_modifiers: ['related-product']
        } %}
      </div>

      <div {{ bem('link', [], card__base_class) }}>
        {% include "@atoms/links/link/link.twig" with {
          link_content: link_content,
          link_url: link_url,
          link_base_class: link_base_class,
          link_attributes: link_attributes,
        } %}
      </div>
    </div>
  </div>
</div>
