{% set cookie_banner__base_class = cookie_banner__base_class|default('cookie-banner') %}
{% if brand_border is not empty %}
  {% set cookie_banner__modifiers = ['brand-border'] %}
{% endif %}

<div {{ bem(cookie_banner__base_class, cookie_banner__modifiers) }} 
data-theme="{{ theme_styles }}"
style="display:block">
  {% if brand_border is not empty and cookie_banner_brand_border %}
    {% block brand_border %}
      <div {{  bem('border', [], cookie_banner__base_class)  }}>
        {{ brand_border | raw }}
      </div>
    {% endblock %}
    {% else %}
      {% if cookie_banner_override == 1%}
      <div class="global-cookie-banner">
      </div>
      {% endif %}
  {% endif %}
  <div {{ bem('wrapper', [], cookie_banner__base_class) }}>
    <div {{ bem('content', [], cookie_banner__base_class) }}>
      <p>
       {{cookie_message}}
      </p>
    </div>
    <div {{ bem('link', [], cookie_banner__base_class) }}>
      <button id="cookie-banner-settings">{{cookie_settings}}</button>
      <button id="onetrust-accept-btn-handler">{{accept_cookie}}</button>
    </div>
    <button class="cookie-banner-close-button"></button>
  </div>
</div>

