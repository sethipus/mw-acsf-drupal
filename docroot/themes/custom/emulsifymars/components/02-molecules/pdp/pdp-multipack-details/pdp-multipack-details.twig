{% set pdp_multipack_details_base_class = pdp_multipack_details_base_class|default('pdp-multipack-details') %}
{% set pdp_multipack_details_heading_base_class = pdp_multipack_details_heading_base_class|default('pdp-multipack-details__heading') %}
{% set dual_label_header_modifier = dual_label ? 'dual-label' : '' %}

<section {{ bem(pdp_multipack_details_base_class) }} data-theme="{{ theme_styles }}" >
  <div {{ bem('header', [dual_label_header_modifier], pdp_multipack_details_base_class) }} >
    {% if not dual_label %}
      {% include "@atoms/images/image/responsive-image.twig" with {
        output_image_tag: true,
        image_alt: product_image.alt,
        image_src: product_image.src|resize(235, 235),
        responsive_image_blockname: 'pdp-multipack-details',
      } %}
    {% endif %}
    {% include "@atoms/text/headings/_heading.twig" with {
      heading: product_title,
      heading_level: 2,
      heading_base_class: pdp_multipack_details_heading_base_class,
    } %}
  </div>

  <!-- PDP Benefits -->
  {% set benefits_list = [] %}
  {% for benefit_item in claims_benefits %}
    {% set benefits_list = benefits_list|merge([{'content' : benefit_item }])   %}
  {% endfor %}
  {% set benefits_data = {
    'enabled': claims_benefits is not empty and pdp_common_nutrition_data.show_claims_benefits is not empty and pdp_common_nutrition_data.show_claims_benefits != 0,
    'title': pdp_common_nutrition_data.benefits_title,
    'list': benefits_list,
    'disclaimer': pdp_common_nutrition_data.benefits_disclaimer,
  } %}
  {% include "@molecules/pdp/pdp-benefits/pdp-benefits.twig" with {
    benefits_data: benefits_data,
    benefits_modifiers: ['multipack']
  } %}

  {% if pdp_nutrition_data and pdp_common_nutrition_data.show_nutrition_data %}
      <!-- PDP Nutrition -->
      <div {{ bem('nutrition', [], pdp_multipack_details_base_class) }} >
        {% include "@molecules/pdp/pdp-nutrition/pdp-nutrition.twig" with {
          size_id: size_id,
          pdp_nutrition_data: pdp_nutrition_data,
          show_table_footer: dual_nutrition_data is empty
        } %}
      </div>
  {% endif %}

  <!-- PDP Dual Nutrition -->
  {% if dual_nutrition_data is not empty and pdp_common_nutrition_data.show_nutrition_data  %}
    {% include "@molecules/pdp/pdp-nutrition/pdp-nutrition.twig" with {
      size_id: size_id,
      pdp_nutrition_data: dual_nutrition_data,
      show_table_footer: true
    } %}
  {% endif %}

  <div {{ bem('allergens', [], pdp_multipack_details_base_class) }} >
    {% include "@molecules/pdp/pdp-allergen/pdp-allergen.twig" with {
      size_id: size_id,
      pdp_common_allergen_data: pdp_common_allergen_data,
      pdp_allergen_data: pdp_allergen_data
    } %}
  </div>
</section>
