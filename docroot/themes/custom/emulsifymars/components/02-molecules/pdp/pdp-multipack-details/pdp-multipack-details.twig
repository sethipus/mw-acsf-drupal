{% set pdp_multipack_details_base_class = pdp_multipack_details_base_class|default('pdp-multipack-details') %}
{% set pdp_multipack_details_heading_base_class = pdp_multipack_details_heading_base_class|default('pdp-multipack-details__heading') %}

<section {{ bem(pdp_multipack_details_base_class) }} data-theme="{{ theme_styles }}" >
  <div {{ bem('header', [], pdp_multipack_details_base_class) }} >
    {% include "@atoms/images/image/responsive-image.twig" with {
      output_image_tag: true,
      image_alt: product_image_alt,
      image_sizes: '212px',
      image_src: product_image_src,
      responsive_image_blockname: 'pdp-multipack-details'
    } %}

    {% include "@atoms/text/headings/_heading.twig" with {
      heading: product_title,
      heading_level: 2,
      heading_base_class: pdp_multipack_details_heading_base_class
    } %}
  </div>

  {% if pdp_nutrition_data %}
    <div {{ bem('nutrition', [], pdp_multipack_details_base_class) }} >
      {% include "@molecules/pdp/pdp-nutrition/pdp-nutrition.twig" with {
        size_id: size_id,
        pdp_nutrition_data: pdp_nutrition_data
      } %}
    </div>
  {% endif %}

  <div {{ bem('allergens', [], pdp_multipack_details_base_class) }} >
    {% include "@molecules/pdp/pdp-allergen/pdp-allergen.twig" with {
      size_id: size_id,
      pdp_common_allergen_data: pdp_common_allergen_data,
      pdp_allergen_data: pdp_allergen_data
    } %}
  </div>
</section>
