{% set filter_title_transform = filter_title_transform|default('uppercase') %}

<div {{ bem('filter-block', [], '') }} data-filter="{{ filter_id }}">
  <button {{ bem('filter-title', [], '') }} aria-expanded="false" aria-haspopup="listbox" style="text-transform: {{ filter_title_transform }}">
    {{ filter_title }} <span {{ bem('counter', [], 'filter-title') }}>{% if active_filters_count != 0 %}{{ active_filters_count }}{% endif %}</span>
  </button>
  <div {{ bem('checkboxes', [], 'filter-block') }}>
    <ul {{ bem('list', [], 'filter-block') }} role="listbox" aria-multiselectable="true">
      {% include "@atoms/forms/checkbox/checkbox.twig" with {
        checkboxes: checkboxes,
      } %}
    </ul>
    <button type="button" {{ bem('button', ['highlighted', 'apply', 'disabled'], search_filter_block_base_class) }}>{{ "Apply" | mt }}</button>
  </div>
</div>
