{% set contact_module_base_class = 'contact-module' %}
{% set contact_module_heading_base_class = 'contact-module__heading' %}
{% set contact_module_social_heading_base_class = 'contact-module__social-heading' %}
{% set contact_module_paragraph_base_class = 'contact-module__paragraph' %}

<section {{ bem(contact_module_base_class) }} data-theme="{{ theme_styles }}">
  <div class="contact-module__brand-shape">
    {{brand_shape | raw}}
  </div>

  <div class="contact-module__content">
    {% include "@atoms/text/headings/_heading.twig" with {
      heading: contact_module_heading,
      heading_level: contact_module_heading_level,
      heading_base_class: contact_module_heading_base_class
    } %}

    {% include "@atoms/text/text/01-paragraph.twig" with {
      paragraph_content: contact_module_paragraph_content,
      paragraph_base_class: contact_module_paragraph_base_class
    } %}

    {% if contact_module_default_link_content and contact_module_default_link_attributes.href %}
      {% include "@atoms/links/defaultLink/defaultLink.twig" with {
        default_link_content: contact_module_default_link_content,
        default_link_border_radius: contact_module_default_link_border_radius,
        default_link_attributes: contact_module_default_link_attributes
      } %}
    {% else %}
      <div class="contact-module__contact-information">
        {% if contact_module_contact_phone %}
          {% include "@atoms/links/defaultLink/defaultLink.twig" with {
            default_link_content: contact_module_contact_phone,
            default_link_border_radius: contact_module_default_link_border_radius,
            default_link_attributes: contact_module_contact_phone_attributes
          } %}
        {% endif %}
        {% if contact_module_contact_email_text and contact_module_contact_email_attributes.href %}
          {% include "@atoms/links/defaultLink/defaultLink.twig" with {
            default_link_content: contact_module_contact_email_text,
            default_link_border_radius: contact_module_default_link_border_radius,
            default_link_attributes: contact_module_contact_email_attributes
          } %}
        {% endif %}
      </div>
      <div class="contact-module__contact-social">
        {% include "@atoms/text/headings/_heading.twig" with {
          heading: contact_module_social_heading,
          heading_level: contact_module_social_heading_level,
          heading_base_class: contact_module_social_heading_base_class
        } %}
        {% include "@molecules/menus/social/social-menu.twig" %}
      </div>
    {% endif %}
  </div>
</section>
