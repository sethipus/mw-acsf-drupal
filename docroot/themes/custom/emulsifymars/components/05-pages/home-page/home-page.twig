  {% include '@molecules/story-highlight/story_highlight.twig' %}
{% elseif StoryTellingOption == 'Poll' %}
  {% include '@molecules/polls/poll-vote.twig' %}
{% elseif StoryTellingOption == 'Iframe' %}
  {% include '@atoms/iframe/iframe.twig' %}
{% elseif StoryTellingOption == 'Full Width Media' %}
  {% include '@molecules/article-media/full-width/full-width-media.twig' %}
{% elseif StoryTellingOption == 'WYSIWYG' %}
  {% include '@molecules/article-media/wysiwyg/article-wysiwyg.twig' %}
{% else %}
  {% include '@molecules/recipe-feature-module/recipe-feature-module.twig' %}
{% endif %}

<!-- Zone 3 Ends -->

