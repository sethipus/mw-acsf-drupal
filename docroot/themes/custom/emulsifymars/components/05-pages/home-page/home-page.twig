<!-- Header -->
{% if theme_styles == 'dove' %}
  {% include '@organisms/site/site-header/site-header.twig' with {
    logo_src: 'https://www.dovechocolate.com/sites/g/files/fnmzdf186/files/dove-chocolate-us-logo.svg'
  } %}
{% elseif theme_styles == 'twix' %}
  {% include '@organisms/site/site-header/site-header.twig' with {
    logo_src: 'twix-logo.png'
  } %}
{% elseif theme_styles == 'galaxy' %}
  {% include '@organisms/site/site-header/site-header.twig' with {
    logo_src: 'https://www.galaxychocolate.co.uk/sites/g/files/fnmzdf211/files/galaxy.svg'
  } %}
{% elseif theme_styles == 'mars' %}
  {% include '@organisms/site/site-header/site-header.twig' with {
    logo_src: 'mars_logo.png'
  } %}
{% else %}
  {% include '@organisms/site/site-header/site-header.twig' %}
{% endif %}

<!-- Zone 1 - Homepage Hero -->
{% if homepageOption == 'Standard HP Hero' %}
  {% include '@molecules/homepage-hero/standard/homepage-hero-standard.twig' %}
{% elseif homepageOption == '3-Up HP Hero' %}
  {% include '@molecules/homepage-hero/3up/homepage-hero-3up.twig' %}
{% elseif homepageOption == 'Video HP Hero' %}
  {% include '@molecules/homepage-hero/video/homepage-hero-video.twig' %}
{% else %}
  {% include '@molecules/homepage-hero/basic/homepage-hero-basic.twig' %}
{% endif %}
<!-- Zone 1 Ends -->

<!-- Zone 2 - Drive to Product -->
{% if productOption == 'Flexible Framer' %}
  {% include '@molecules/flexible-framer/flexible-framer.twig' %}
{% elseif productOption == 'Product Content Pair Up' %}
  {% include '@molecules/product-content-pair-up/product-content-pair-up.twig' %}
{% elseif productOption == 'Product Feature' %}
  {% include '@molecules/product-feature/product-feature.twig' with {
    heading_level: 1
  } %}
{% else %}
  {% include '@molecules/flexible-driver/flexible-driver.twig' %}
{% endif %}

<!-- Zone 2 Ends -->

<!-- Zone 3 - Additional Product Touts, Storytelling & Communit -->
{% if StoryTellingOption == 'Product Content Pair Up' %}
  {% include '@molecules/product-content-pair-up/product-content-pair-up.twig' %}
{% elseif StoryTellingOption == 'Product Feature' %}
