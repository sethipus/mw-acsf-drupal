<section class="search-results-page" data-theme="twix">
  {% include "@molecules/search-page-header/search-page-header.twig" with {
      search_page_header_heading: 'What are you looking for?',
      search_page_header_heading_level: 1,
      search_page_header_heading_base_class: 'search-page-heading'
    }
  %}

  {% include "@atoms/text/headings/_heading.twig" with {
    heading: no_results_heading,
    heading_level: 2,
    heading_base_class: 'no-results-heading'
  } %}

  {% include "@atoms/separators/horizontal-img/horizontal-img.twig" %}

  {% include "@atoms/text/text/01-paragraph.twig" with {
    paragraph_content: no_results_text,
    paragraph_base_class: 'no-results-text'
  } %}

  <div class="no-results-links-container">
    {% for link in no_results_links %}
      {% include "@atoms/links/defaultLink/defaultLink.twig" with {
        default_link_content: link.content,
        default_link_attributes: link.attributes,
        default_link_modifiers: ['light']
      } %}
    {% endfor %}
  </div>
</section>
