{#
/**
 * Available variables:
 * - product_sku -
 * - commerce_vendor -
 * - cta_title -
 * - button_type -
 * - data_widget_id -
 * - data_display -
 * - reference_for_analitics -
 * - where_to_buy_base_class -
 * - where_to_buy_modifiers -
 * - where_to_buy_blockname -
 *
 */
#}

{% if (commerce_vendor == 'commerce_connector') %}
  <!-- Commerce Connector -->
  {% include "@atoms/buttons/where-to-buy-commerce_connector/where-to-buy-commerce_connector.twig" with {
    product_sku: product_sku,
    commerce_vendor: wtb_commerce_vendor,
    cta_title: link_content,
    button_type: wtb_button_type,
    data_widget_id: wtb_widget_id,
    data_display: wtb_display,
    reference_for_analitics: reference_for_analitics,
    where_to_buy_base_class: where_to_buy_base_class,
    where_to_buy_modifiers: where_to_buy_modifiers,
    where_to_buy_blockname: where_to_buy_blockname
  } %}
{% elseif (commerce_vendor == 'price_spider') %}
  <!-- Price Spider -->
  {% include "@atoms/buttons/where-to-buy-price_spider/where-to-buy-price_spider.twig" with {
    product_sku: product_sku,
    commerce_vendor: wtb_commerce_vendor,
    cta_title: link_content,
    button_type: wtb_button_type,
    data_widget_id: wtb_widget_id,
    data_display: wtb_display,
    reference_for_analitics: reference_for_analitics,
    where_to_buy_base_class: where_to_buy_base_class,
    where_to_buy_modifiers: where_to_buy_modifiers,
    where_to_buy_blockname: where_to_buy_blockname
  } %}
{% elseif (commerce_vendor == 'smart_commerce') %}
  <!-- Smart Commerce -->
  {% include "@atoms/buttons/where-to-buy-smart_commerce/where-to-buy-smart_commerce.twig" with {
    product_sku: product_sku,
    commerce_vendor: wtb_commerce_vendor,
    cta_title: link_content,
    button_type: wtb_button_type,
    data_widget_id: wtb_widget_id,
    data_display: wtb_display,
    reference_for_analitics: reference_for_analitics,
    where_to_buy_base_class: where_to_buy_base_class,
    where_to_buy_modifiers: where_to_buy_modifiers,
    where_to_buy_blockname: where_to_buy_blockname
  } %}
{% else %}
  <!-- Default Variant -->
  {% include "@atoms/buttons/where-to-buy-commerce_connector/where-to-buy-commerce_connector.twig" with {
    product_sku: product_sku,
    commerce_vendor: wtb_commerce_vendor,
    cta_title: link_content,
    button_type: wtb_button_type,
    data_widget_id: wtb_widget_id,
    data_display: wtb_display,
    reference_for_analitics: reference_for_analitics,
    where_to_buy_base_class: where_to_buy_base_class,
    where_to_buy_modifiers: where_to_buy_modifiers,
    where_to_buy_blockname: where_to_buy_blockname
  } %}
{% endif %}
