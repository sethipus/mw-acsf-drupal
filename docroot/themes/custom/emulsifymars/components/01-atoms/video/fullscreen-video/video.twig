{#
 # Available variables:
 # - video__src__url - the url the link should link to.
 #}
{% set video__base_class = video__base_class|default('fullscreen-video') %}

<figure {{ bem(video__base_class, video__modifiers, video__blockname, video__extra_classes) }} id="video-container" data-fullscreen="false">
  <video id='fullscreen-video' {{ bem('main', [], video__base_class) }}>
    <source loop src="{{ video__src__url }}" type="video/mp4" />
  </video>
  <div id="video-controls" class="controls" data-state="hidden">
    <button id="playpause" type="button" data-state="play"><div {{ bem('control', ['inner'], video__base_class) }}/></button>
    <button id="stop" type="button" data-state="stop"></button>
    <button id="mute" type="button" data-state="mute"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="none" viewBox="0 0 30 30"><path fill="#fff" d="M3.75 11.25v7.5h5L15 25V5l-6.25 6.25h-5zM20.625 15c0-2.212-1.275-4.112-3.125-5.037v10.062c1.85-.912 3.125-2.812 3.125-5.025zM17.5 4.038v2.575c3.613 1.075 6.25 4.425 6.25 8.387 0 3.963-2.637 7.313-6.25 8.388v2.575c5.012-1.138 8.75-5.613 8.75-10.963 0-5.35-3.738-9.825-8.75-10.962z"/></svg></button>
    <div class="progress">
      <progress id="progress" value="0" min="0">
        <span id="progress-bar"></span>
      </progress>
    </div>
    <div id="progress-time"></div>
    <button id="subtitles" type="button" data-state="subtitles"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="20" fill="none" viewBox="0 0 32 20"><path fill="#fff" fill-rule="evenodd" d="M2 0C.895 0 0 .895 0 2v16c0 1.105.895 2 2 2h28c1.105 0 2-.895 2-2V2c0-1.105-.895-2-2-2H2zm11.608 7.548c-.182-.224-.616-.7-1.694-.7-2.226 0-2.548 2.198-2.548 3.346 0 2.24 1.162 3.248 2.576 3.248.91 0 1.554-.42 1.89-.952.032-.053.061-.108.091-.163.05-.091.1-.184.161-.271.112-.168.322-.392.728-.392.49 0 1.12.336 1.12 1.022 0 .098-.014.28-.098.518-.154.378-.462.756-.77 1.022-1.036.91-2.212 1.05-3.136 1.05-1.456 0-2.17-.378-2.59-.63C8.134 13.932 7 12.434 7 10.11 7 7.296 8.764 5 11.872 5c.77 0 1.484.14 2.016.35.812.322 1.82 1.106 1.82 1.904 0 .644-.56 1.036-1.022 1.036-.415 0-.666-.287-.766-.402l-.004-.004c-.056-.056-.105-.112-.154-.168-.049-.056-.098-.112-.154-.168zm9.94 0c-.182-.224-.616-.7-1.694-.7-2.226 0-2.549 2.198-2.549 3.346 0 2.24 1.163 3.248 2.576 3.248.91 0 1.555-.42 1.89-.952.032-.053.062-.108.092-.163.05-.091.1-.184.16-.271.113-.168.323-.392.729-.392.49 0 1.12.336 1.12 1.022 0 .098-.014.28-.099.518-.154.378-.462.756-.77 1.022-1.035.91-2.212 1.05-3.136 1.05-1.456 0-2.17-.378-2.59-.63-1.204-.714-2.338-2.212-2.338-4.536 0-2.814 1.764-5.11 4.872-5.11.77 0 1.485.14 2.017.35.812.322 1.82 1.106 1.82 1.904 0 .644-.56 1.036-1.023 1.036-.415 0-.666-.287-.766-.402l-.004-.004c-.056-.056-.105-.112-.154-.168-.049-.056-.098-.112-.154-.168z" clip-rule="evenodd"/></svg></button>
    <button id="fs" type="button" data-state="go-fullscreen"><svg xmlns="http://www.w3.org/2000/svg" width="23" height="22" fill="none" viewBox="0 0 23 22"><path fill="#fff" d="M8.203 0H.996v7.207h2V2h5.207V0zM15.79 2V0h7.207v7.207h-2V2h-5.208zM15.79 20h5.207v-5.207h2v7.208h-7.208v-2zM2.996 14.793v5.208h5.207v2H.996v-7.208h2z"/></svg></button>
  </div>
  {% if video__control == true %}
    <button {{ bem('control', [], video__base_class) }} id="fullscreen-play" type="button" data-state="play"><div {{ bem('control', ['inner'], video__base_class) }}/></button>
  {% endif %}
</figure>
