{% set recipe_template__base_class = 'recipe-detail' %}

<section {{ bem(recipe_template__base_class) }} data-theme="twix">
  <div class="recipe-header">
    <div class="recipe-header__title">{{ 'Recipe' | t }}</div>
    <div class="recipe-header__text">{{ recipe_header_text }}</div>
  </div>
  <div class="recipe-media">
    {% block recipe_media_image %}
      {% include "@atoms/images/image/responsive-image.twig" with {
        output_image_tag: true,
        image_alt: image_title,
        image_srcset: image_srcset,
        image_sizes: '',
        image_src: image_src,
        responsive_image_blockname: 'recipe-media',
      } %}
    {% endblock %}
    <div class="recipe-media__info">
      <div class="recipe-details">
        <div class="recipe-details-item">
          {% include "@atoms/images/icons/_icon.twig" with {
            icon_base_class: "icon",
            icon_blockname: "recipe-details-item",
            icon_name: "clock",
          } %}
          <div class="recipe-details-item__info">
            <div class="recipe-details-item__label">{{ 'Time' | t }}</div>
            <div class="recipe-details-item__value">{{ recipe_cooking_time }}</div>
          </div>
        </div>
        <div class="recipe-details-item">
          {% include "@atoms/images/icons/_icon.twig" with {
            icon_base_class: "icon",
            icon_blockname: "recipe-details-item",
            icon_name: "ingredients",
          } %}
          <div class="recipe-details-item__info">
            <div class="recipe-details-item__label">{{ 'Ingredients' | t }}</div>
            <div class="recipe-details-item__value">{{ recipe_ingredients_number }}</div>
          </div>
        </div>
        <div class="recipe-details-item">
          {% include "@atoms/images/icons/_icon.twig" with {
            icon_base_class: "icon",
            icon_blockname: "recipe-details-item",
            icon_name: "makes",
          } %}
          <div class="recipe-details-item__info">
            <div class="recipe-details-item__label">{{ 'Makes' | t }}</div>
            <div class="recipe-details-item__value">{{ recipe_number_of_servings }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="recipe-info">
    <div class="recipe-info__text">{{ recipe_description_text }}</div>
    <div class="recipe-info__social">
      <div class="recipe-info__social-text">{{ social_text }}</div>
      {% include "@molecules/menus/social/social-menu.twig" %}
    </div>
  </div>
  <div class="product-used">
    <div class="product-used__title">{{ products_used }}</div>
    <div class="product-used-items">
      <div class="product-used-item"></div>
    </div>
  </div>
  <div class="ingredients">ingredients</div>
  <div class="instructions">instructions</div>
  <div class="more-recipes">more-recipes</div>
</section>
