{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}

{% if items.next %}
  <ul{{ attributes }}>
    <li class="pager__item">
      <a class="default-link" href="{{ items.next.href }}" rel="next" style="{{ 'border-radius: ' ~ default_link_border_radius ~ 'px' }}">
        <span class="default-link__label">
          {{ options.button_text }}
        </span>
      </a>
    </li>
  </ul>
{% endif %}
