{% set image_src = file_url(node.field_content_hub_image.entity.image.entity.fileuri) %}
{% set image_alt = node.field_content_hub_image.entity.image.entity.alt %}

{% include "@molecules/card/content-hub-card/content-hub-card.twig" with {
  theme_styles: 'drupal',
  recipe_is_new: recipe_is_new,

  card_image_src: image_src,
  card_image_alt: image_alt ,
  media_url: url,

  heading: node.label,
  heading_level: 3,
  heading_base_class: 'recipe-card-heading',

  button_text: 'see details'|t,
  button_modifiers: ['small'],
  button_link_attributes: {
    href: url,
    target: '_blank'
  },
} %}
