{#
/**
 * @file
 * Template for the Content Hub Page Card component.
 */
#}

{% set background_asset = node | entityMainMediaId | mediaParamsById %}

{% set button_link_content_text = 'SEE DETAILS' | mt %}

{% set heading_link_attributes = { href: url, target: '_blank', 'data-click-name': node.label } | merge(attributes) %}
{% set button_link_attributes = { href: url, target: '_blank', 'data-click-name': button_link_content_text } | merge(attributes) %}

{% include "@molecules/card/recommendations-card/content-hub-card.twig" with {
  theme_styles: 'drupal',

  card_image_src: background_asset.src,
  card_image_alt: background_asset.alt ,
  media_url: url,

  heading: node.label,
  heading_level: 3,
  heading_base_class: 'recommendations-card-heading',
  heading_link_attributes: heading_link_attributes,

  button_text: button_link_content_text,
  button_modifiers: ['small'],
  button_link_attributes: button_link_attributes,
  select_background_color: select_background_color,
} %}
