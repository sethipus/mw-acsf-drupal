{% set recipe_template__base_class = 'recipe-detail' %}

<section {{ bem(recipe_template__base_class) }} data-theme="twix">
  <div class="recipe-body-content recipe-body-content__top" data-theme="{{ theme_styles }}">
    <h1 class="recipe-body-content-header">{{ "ingredients" | t }}</h1>
    {% include "@atoms/lists/ul.twig" with {
      ul_items: ingredients_list,
      ul_base_class: 'recipe-body-ingredients-list'
    }%}
    <div class="product-used" data-theme="{{ theme_styles }}">
      <div class="product-used__title">{{ "Products used" | t }}</div>
      {% include "@molecules/product-used-module/product-used-module.twig" with {
        items: product_used_items
      } %}
    </div>
  </div>
</section>
