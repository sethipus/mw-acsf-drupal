{{ attach_library('emulsifymars/ambient-video') }}

{% embed "@molecules/recipe-hero-module/recipe-hero-module.twig" with {
  theme_styles: 'drupal',
  brand_borders: border,
  brand_shape_class: brand_shape_class,
  recipe_header_text: label,
  recipe_description_text: description,
  recipe_cooking_time: cooking_time,
  recipe_ingredients_number: ingredients_number,
  recipe_number_of_servings: number_of_servings,
  image: image,
  image_srcset: image.url,
  video_src: video
} %}
  {% block recipe_media_video %}
    {% include "@atoms/video/ambient-video/video.twig" with {
      video__src__url: video_src,
      video__base_class: 'ambient-video',
      video__control: true,
    } %}
  {% endblock %}
  {% block recipe_media_image %}
    {% include "@atoms/images/image/responsive-image.twig" with {
      output_image_tag: true,
      image_alt: image.alt,
      image_srcset: image.url,
      image_sizes: '',
      image_src: image.url,
      responsive_image_blockname: 'recipe-media',
    } %}
  {% endblock %}
  {% block recipe_social_menu %}
    {% include "@molecules/menus/social/social-menu.twig" with {
      social_menu_items: social_links,
    } %}
  {% endblock %}
{% endembed %}
